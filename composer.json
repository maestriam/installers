{
    "name": "maestriam/installers",
    "type": "composer-plugin",
    "require": {
        "composer-plugin-api": "*"
    },
    "require-dev": {
        "composer/composer": ">=2.0",
        "composer/semver": "^1 || ^3",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Maestriam\\Installers\\": "src/"
        }
        
    },
    "autoload-dev": {
        "psr-4": { 
            "Maestriam\\Installers\\Tests\\": "tests/" 
        }
    },
    "authors": [
        {
            "name": "Giuliano Sampaio",
            "email": "giuguitar@gmail.com"
        }
    ],
    "extra": {
        "class": "Maestriam\\Installers\\InstallerPlugin"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
